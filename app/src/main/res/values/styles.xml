<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityTransitionAnim</item>
    </style>

    <style name="CustomActivityTransitionAnim" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right_anim</item>
    </style>
</resources>
